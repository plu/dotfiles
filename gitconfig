[user]
    name = Johannes Plunien
    email = plu@pqpq.de
[color]
    status = auto
    branch = auto
    ui = auto
    interactive = auto
[alias]
    st = status
    br = branch
    ci = commit
    co = checkout
    cp = cherry-pick
    di = diff
    sy = remote update
    staged = diff --cached
    resetns = !git stash save --keep-index && git stash drop
    prunelocal = "!for branch in $(git branch --merged | grep -v develop); do git branch -d $branch; done"
    tagx = log --tags --simplify-by-decoration --pretty='format:%ai %d'
    w = whatchanged
    dc = svn dcommit
    up = svn rebase --all
    wtf = !git-wtf
    cfgmail = config user.email
    pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
    bdm = "!git branch --merged | egrep -v '(^\\*|master|develop)' | xargs git branch -d"
[core]
    excludesfile = ~/.gitignore-global
    pager = less -FXRS -x4
    legacyheaders = false
[diff]
    rename = copy
    renamelimit = 0
[merge]
    tool = opendiff
[format]
    numbered = auto
[repack]
    usedeltabaseoffset = true
[svn]
    rmdir = true
[cpan-import]
    backpan = true
[github-import]
    remote = origin
[help]
    autocorrect = -1
[push]
    default = tracking
[apply]
    whitespace = nowarn
[sendemail]
    suppresscc = all
    to = hudson@build-1.dev.fra2.xing.com
    from = johannes.plunien@xing.com
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[http]
    sslVerify = false
[grep]
    lineNumber = true
    extendedRegexp = true
[log]
    decorate = short
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
