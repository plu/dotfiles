[user]
    email = johannes@plunien.de
    name = Johannes Plunien
[color]
    branch = auto
    interactive = auto
    status = auto
    ui = auto
[alias]
    bdm = "!git branch --merged | egrep -v '(^\\*|master|develop)' | xargs git branch -d"
    br = branch
    cfgmail = config user.email
    ci = commit
    co = checkout
    cp = cherry-pick
    dc = svn dcommit
    di = diff
    pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
    prunelocal = "!for branch in $(git branch --merged | grep -v develop); do git branch -d $branch; done"
    resetns = !git stash save --keep-index && git stash drop
    st = status
    staged = diff --cached
    sy = remote update
    tagx = log --tags --simplify-by-decoration --pretty='format:%ai %d'
    up = svn rebase --all
    w = whatchanged
    wtf = !git-wtf
[core]
    excludesfile = ~/.gitignore-global
    legacyheaders = false
    pager = delta
[diff]
    rename = copy
    renamelimit = 0
[merge]
    tool = opendiff
[format]
    numbered = auto
[repack]
    usedeltabaseoffset = true
[svn]
    rmdir = true
[cpan-import]
    backpan = true
[github-import]
    remote = origin
[help]
    autocorrect = -1
[push]
    default = tracking
[apply]
    whitespace = nowarn
[sendemail]
    from = johannes.plunien@xing.com
    suppresscc = all
    to = hudson@build-1.dev.fra2.xing.com
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[http]
    sslVerify = false
[grep]
    extendedRegexp = true
    lineNumber = true
[log]
    decorate = short
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[url "git@git.aptumtek.com:"]
    insteadOf = https://git.aptumtek.com/
[interactive]
    diffFilter = delta --color-only
[delta]
    syntax-theme = GitHub
    features = line-numbers decorations
